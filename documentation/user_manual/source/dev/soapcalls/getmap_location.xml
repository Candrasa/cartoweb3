<sect2 id="dev.soapcalls.getmap.location">
  <title>Location</title>
  <para>
    The Location plugin handles [...]
  </para>
  <sect3 id="dev.soapcalls.getmap.location.request">
    <title>Request</title>
    <para>
      <programlisting><![CDATA[
<simpleType name="LocationType">
  <restriction base="xsd:string">
    <enumeration value="bboxLocationRequest"/>
    <enumeration value="panLocationRequest"/>
    <enumeration value="zoomPointLocationRequest"/>
    <enumeration value="recenterLocationRequest"/>
  </restriction>
</simpleType>]]></programlisting>
      <itemizedlist>
        <listitem><para>bboxLocationRequest -</para></listitem>
        <listitem><para>panLocationRequest -</para></listitem>
        <listitem><para>zoomPointLocationRequest -</para></listitem>
        <listitem><para>recenterLocationRequest -</para></listitem>
      </itemizedlist>				
      <programlisting><![CDATA[
<complexType name="LocationConstraint">
  <all>
    <element name="className" type="xsd:string"/>
    <element name="maxBbox" type="types:Bbox"/>
  </all>
</complexType>]]></programlisting>
      <itemizedlist>
        <listitem><para>className -</para></listitem>
        <listitem><para>maxBbox -</para></listitem>
      </itemizedlist>				
      <programlisting><![CDATA[
<complexType name="LocationRequest">
  <all>
    <element name="className" type="xsd:string"/>
    <element name="locationType"  type="types:LocationType"/>
    <element name="bboxLocationRequest" type="types:BboxLocationRequest" minOccurs="0"/>
    <element name="panLocationRequest" type="types:PanLocationRequest" minOccurs="0"/>
    <element name="zoomPointLocationRequest" type="types:ZoomPointLocationRequest" minOccurs="0"/>
    <element name="recenterLocationRequest" type="types:RecenterLocationRequest" minOccurs="0"/>
    <element name="locationConstraint" type="types:LocationConstraint" minOccurs="0"/>
  </all>
</complexType>]]></programlisting>
      <itemizedlist>
        <listitem><para>className -</para></listitem>
        <listitem><para>locationType -</para></listitem>
        <listitem><para>bboxLocationRequest -</para></listitem>
        <listitem><para>panLocationRequest -</para></listitem>
        <listitem><para>zoomPointLocationRequest -</para></listitem>
        <listitem><para>recenterLocationRequest -</para></listitem>
        <listitem><para>locationConstraint -</para></listitem>
      </itemizedlist>				
    </para>
    <sect4 id="dev.soapcalls.getmap.location.request.bbox">
      <title>BBox Request</title>
      <para>
        <programlisting><![CDATA[
<complexType name="BboxLocationRequest">
  <all>
    <element name="bbox" type="types:Bbox"/>
  </all>
</complexType>]]></programlisting>
        <itemizedlist>
          <listitem><para>bbox -</para></listitem>
        </itemizedlist>				        
      </para>
    </sect4>
    <sect4 id="dev.soapcalls.getmap.location.request.pan">
      <title>Pan Request</title>
      <para>
        <programlisting><![CDATA[
<simpleType name="PanDirectionType">
  <restriction base="xsd:string">
    <enumeration value="VERTICAL_PAN_NORTH"/>
    <enumeration value="VERTICAL_PAN_NONE"/>
    <enumeration value="VERTICAL_PAN_SOUTH"/>
    <enumeration value="HORIZONTAL_PAN_WEST"/>
    <enumeration value="HORIZONTAL_PAN_NONE"/>
    <enumeration value="HORIZONTAL_PAN_EAST"/>
  </restriction>
</simpleType>]]></programlisting>
        <itemizedlist>
          <listitem><para>VERTICAL_PAN_NORTH -</para></listitem>
          <listitem><para>VERTICAL_PAN_NONE -</para></listitem>
          <listitem><para>VERTICAL_PAN_SOUTH -</para></listitem>
          <listitem><para>HORIZONTAL_PAN_WEST -</para></listitem>
          <listitem><para>HORIZONTAL_PAN_NONE -</para></listitem>
          <listitem><para>HORIZONTAL_PAN_EAST -</para></listitem>
        </itemizedlist>				        
        <programlisting><![CDATA[
<complexType name="PanDirection">
  <all>
    <element name="verticalPan" type="types:PanDirectionType"/>
    <element name="horizontalPan" type="types:PanDirectionType"/>
  </all>
</complexType>]]></programlisting>
        <itemizedlist>
          <listitem><para>verticalPan -</para></listitem>
          <listitem><para>horizontalPan -</para></listitem>
        </itemizedlist>				        
        <programlisting><![CDATA[
<complexType name="PanLocationRequest">
  <all>
    <element name="bbox" type="types:Bbox"/>
    <element name="panDirection" type="types:PanDirection"/>
  </all>
</complexType>]]></programlisting>
        <itemizedlist>
          <listitem><para>bbox -</para></listitem>
          <listitem><para>panDirection -</para></listitem>
        </itemizedlist>				        
      </para>
    </sect4>
    <sect4 id="dev.soapcalls.getmap.location.request.zoom">
      <title>Zoom-Point Request</title>
      <para>
        <programlisting><![CDATA[
<simpleType name="ZoomType">
  <restriction base="xsd:string">
    <enumeration value="ZOOM_DIRECTION_IN"/>
    <enumeration value="ZOOM_DIRECTION_NONE"/>
    <enumeration value="ZOOM_DIRECTION_OUT"/>
    <enumeration value="ZOOM_FACTOR"/>
    <enumeration value="ZOOM_SCALE"/>
  </restriction>
</simpleType>]]></programlisting>
        <itemizedlist>
          <listitem><para>ZOOM_DIRECTION_IN -</para></listitem>
          <listitem><para>ZOOM_DIRECTION_NONE -</para></listitem>
          <listitem><para>ZOOM_DIRECTION_OUT -</para></listitem>
          <listitem><para>ZOOM_FACTOR -</para></listitem>
          <listitem><para>ZOOM_SCALE -</para></listitem>
        </itemizedlist>				        
        <programlisting><![CDATA[
<complexType name="ZoomPointLocationRequest">
  <all>
    <element name="bbox" type="types:Bbox"/>
    <element name="point" type="types:Point"/>
    <element name="zoomType" type="types:ZoomType"/>
    <element name="zoomFactor" type="xsd:float" minOccurs="0"/>
    <element name="scale" type="xsd:integer" minOccurs="0"/>
  </all>
</complexType>]]></programlisting>
        <itemizedlist>
          <listitem><para>bbox -</para></listitem>
          <listitem><para>point -</para></listitem>
          <listitem><para>zoomType -</para></listitem>
          <listitem><para>zoomFactor -</para></listitem>
          <listitem><para>scale -</para></listitem>
        </itemizedlist>				        
      </para>
    </sect4>
    <sect4 id="dev.soapcalls.getmap.location.request.recenter">
      <title>Recenter Request</title>
      <para>
        <programlisting><![CDATA[
<complexType name="IdSelection">
  <all>
    <element name="layerId" type="xsd:string"/>
    <element name="idAttribute" type="xsd:string"/>
    <element name="idType" type="xsd:string"/>
    <element name="selectedIds" type="types:ArrayOfString"/>
  </all>
</complexType>]]></programlisting>
        <itemizedlist>
          <listitem><para>layerId -</para></listitem>
          <listitem><para>idAttribute -</para></listitem>
          <listitem><para>idType -</para></listitem>
          <listitem><para>selectedIds -</para></listitem>
        </itemizedlist>				        
        <programlisting><![CDATA[
<complexType name="ArrayOfIdSelection">
  <complexContent>
    <restriction base="enc11:Array">
      <attribute ref="enc11:arrayType" wsdl:arrayType="types:IdSelection[]"/>
    </restriction>
  </complexContent>
</complexType>]]></programlisting>
        <itemizedlist>
          <listitem><para>array -</para></listitem>
        </itemizedlist>				        
        <programlisting><![CDATA[
<complexType name="RecenterLocationRequest">
  <all>
    <element name="idSelections" type="types:ArrayOfIdSelection"/>
  </all>
</complexType>]]></programlisting>
        <itemizedlist>
          <listitem><para>idSelections -</para></listitem>
        </itemizedlist>				        
      </para>
    </sect4>
  </sect3>
